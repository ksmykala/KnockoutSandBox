@{
    ViewBag.Title = "Bindings";
}

<h2>Binding</h2>
<div class="section">
    <div>
        <h3>Plain text binding:</h3>
        <div data-bind="text: plainText"></div>
    </div>

    <div>
        <h3>Options binding - select your company:</h3>
        <div>
            <select data-bind="options: availableCompanies, optionsValue: 'index', optionsText: 'name', value: selectedCompany, optionsCaption: 'Choose...'"></select>
        </div>
    </div>

    <div>
        <h3>Custom binding handler with template - <span title="choose your company first">select your job*</span>:</h3>
        <div data-bind="toggleWizardSection: selectedCompany">
            <h3><span class="label label-success">Available jobs</span></h3>
            <div data-bind="foreach: getJobsInSelectedCompany()">
                <div data-bind="renderJobs: $data, template: 'job-template'"></div>
            </div>
            <script type="text/html" id="job-template">
                <span data-bind="text: name"></span>
            </script>
        </div>
</div>
</div>

@section scripts
{
    <script src="/Areas/Knockout/Scripts/bindings.js"></script>
    <script src="/Areas/Knockout/Scripts/bindingHandlers.js"></script>
}
